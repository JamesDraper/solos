{
    "autoload": {
        "psr-4": {
            "Solos\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-mockery": "^2.0",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpstan",
            "@phpcs"
        ],
        "phpunit": "phpunit",
        "phpstan": "phpstan",
        "phpcs": [
            "@phpcs.src",
            "@phpcs.tests"
        ],
        "phpcs.src": "phpcs --standard=phpcs.src.xml src",
        "phpcs.tests": "phpcs --standard=phpcs.tests.xml src"
    }
}
