{
    "autoload": {
        "psr-4": {
            "Solos\\": "src"
        }
    },
    "require": {
        "psr/http-message": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-mockery": "^2.0",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpstan",
            "@phpcs"
        ],
        "phpunit": [
            "@phpunit.unit.layer0",
            "@phpunit.unit.layer1",
            "@phpunit.unit.layer2"
        ],
        "phpunit.unit.layer0": "phpunit --testsuite unit.layer0",
        "phpunit.unit.layer1": "phpunit --testsuite unit.layer1",
        "phpunit.unit.layer2": "phpunit --testsuite unit.layer2",
        "phpunit.unit": "phpunit --testsuite unit",
        "phpstan": "phpstan",
        "phpcs": [
            "@phpcs.src",
            "@phpcs.tests"
        ],
        "phpcs.src": "phpcs --standard=phpcs.src.xml src",
        "phpcs.tests": "phpcs --standard=phpcs.tests.xml tests"
    }
}
